/**
 * z-index table
 * @1  :: .functions
 * @1  :: .card-body-display
 * @0  :: .body
 * @-5 :: .card-background
 */

nav-bar {
  position: absolute !important;
}

.nav-bar-title {
  color: white;
  text-align: center;
}

.nav-bar-scanqr {
  width: 20px;
  height: 20px;
}

.card {
  position: absolute;
  top: 0;
  height: 90vw;
  box-sizing: border-box;
}

.card-background {
  position: absolute;
  top: 0;
  z-index: -5;
}

.card-container {
  position: absolute;
  top: 0;
  z-index: 0;
  padding-bottom: 18vw;
}

.card-body {
  position: absolute;
  height: 45vw;
  width: 72.5vw;
  background: white;
  border-radius: 10px;
  overflow: hidden;
  box-shadow: 0 0 10px #b2b2b2b2;
  -webkit-transform: perspective(1px) translateZ(0);
  transform: perspective(1px) translateZ(0);
  -webkit-transition-duration: 0.2s;
  transition-duration: 0.2s;
  -webkit-transition-property: transform;
  transition-property: transform;
}

.card-body-hover {
  -webkit-transform: scale(1.05);
  transform: scale(1.05);
}

.card-body-background-logo {
  position: relative;
  left: -10vw;
  height: 55vw;
  width: 55vw;
  opacity: 0.05;
  z-index: 0;
}

.card-body-display {
  position: absolute;
  top: 0;
  z-index: 1;
}

.card-body-display-trademark {
  color: #d1233e;
  font-size: 22pt;
  font-weight: lighter;
}

.body {
  position: absolute;
  top: 85vw;
}

.membership {
  position: relative;
  height: 20vw;
  padding-top: 35px;
  padding-bottom: 14px;
}

.membership-info-icon {
  width: 16pt;
  height: 16pt;
  padding: 0 2px;
}

.membership-info-credit-current {
  font-size: 20pt;
  font-weight: bold;
  padding: 0 2px;
}

.membership-progressbar-container {
  height: 20px;
  padding: 7px 30px;
  padding-top: 0;
}

.membership-progressbar-base {
  overflow: hidden;
  border-radius: 20px;
  background: #b2b2b2b2;
}

.membership-progressbar {
  border-radius: 20px;
  background-position: center;
  background: linear-gradient(to right, #d1233e, #ffd116);
  transition: width 0.5s ease;
  -webkit-transition: width 0.5s ease;
}

.membership-rubric {
  padding: 0 30px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.membership-rubric-label {
  font-size: 11pt;
  color: #b2b2b2;
}

.navigators {
  padding: 14px 0;
  padding-bottom: 28px;
}

.navigators-title {
  text-transform: capitalize;
}