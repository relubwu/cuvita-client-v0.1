/**
 * z-index table
 * @1  :: .functions
 * @0  :: .body
 * @-5 :: .user-background
 */

nav-bar {
  position: absolute !important;
}

.nav-bar-title {
  color: white;
  text-align: center;
}

.nav-bar-scanqr {
  width: 20px;
  height: 20px;
}

.user {
  position: absolute;
  top: 0;
  height: 90vw;
  box-sizing: border-box;
}

.user-background {
  position: absolute;
  top: 0;
  z-index: -5;
}

.user-container {
  position: absolute;
  top: 0;
  z-index: 0;
  padding-bottom: 20vw;
}

.user-avatar {
  height: 32vw;
  width: 32vw;
  border-radius: 100%;
  overflow: hidden;
  box-shadow: 0 0 2px #2b2b2b02;
}

.user-nickname {
  color: white;
  font-size: 14pt;
  font-weight: bold;
  padding-top: 7px;
  text-shadow: 0 0 2px #2b2b2b02;
}

.user-city {
  color: white;
  font-size: 11pt;
  text-shadow: 0 0 2px #2b2b2b02;
}

.body {
  position: absolute;
  top: 85vw;
}

.preauth {
  position: relative;
  padding-top: 14px;
}

.preauth-promo {
  height: 60vw;
  box-sizing: border-box;
  padding: 14px 15px;
}

.preauth-promo-slide {
  border-radius: 10px;
  overflow: hidden;
}

.preauth-label {
  font-size: 14pt;
  text-transform: uppercase;
  font-weight: bold;
}

.preauth-actions-container {
  margin-top: 14px;
}

.preauth-actions {
  padding: 7px 15px;
  margin: 0 7px;
  border-radius: 10px;
  color: white;
  font-size: 14pt;
  -webkit-transform: perspective(1px) translateZ(0);
  transform: perspective(1px) translateZ(0);
  box-shadow: 0 0 1px rgba(0, 0, 0, 0);
  -webkit-transition-duration: 0.2s;
  transition-duration: 0.2s;
  -webkit-transition-property: transform;
  transition-property: transform;
}

.preauth-actions-hover {
  -webkit-transform: scale(1.02);
  transform: scale(1.02);
}

.preauth-actions-bind {
  background: #b2b2b2;
}

.preauth-actions-register {
  background: #d1233e;
}

.membership {
  position: relative;
  height: 20vw;
  padding-top: 35px;
  padding-bottom: 14px;
}

.membership-info-icon {
  width: 16pt;
  height: 16pt;
  padding: 0 2px;
}

.membership-info-credit-current {
  font-size: 20pt;
  font-weight: bold;
  padding: 0 2px;
}

.membership-progressbar-container {
  height: 20px;
  padding: 7px 30px;
  padding-top: 0;
}

.membership-progressbar-base {
  overflow: hidden;
  border-radius: 20px;
  background: #b2b2b2b2;
}

.membership-progressbar {
  border-radius: 20px;
  background-position: center;
  background: linear-gradient(to right, #d1233e, #ffd116);
  transition: width 0.5s ease;
  -webkit-transition: width 0.5s ease;
}

.membership-rubric {
  padding: 0 30px;
  box-sizing: border-box;
  justify-content: space-between;
  align-items: center;
}

.membership-rubric-label {
  font-size: 11pt;
  color: #b2b2b2;
}

.navigators {
  padding-top: 14px;
}