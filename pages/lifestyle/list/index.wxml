<!-- SEARCH -->
<van-search custom-class="nav-bar-search" field-class="nav-bar-search-field" background="#d1233e" placeholder="{{ localepkg[locale].search }}" readonly />
<!-- TABS -->
<van-tabs active="{{ current.index }}" bind:change="onChange" color="#d1233e" swipeable>
  <van-tab title="{{ localepkg[locale][tabItem] }}" wx:for="{{ categories }}" wx:for-item="tabItem" wx:for-index="tabIndex" wx:key="{{ tabItem }}">
    <!-- CARDS -->
    <navigator class="card-container" wx:for="{{ vendors[tabItem] }}" url="/pages/lifestyle/detail/index?vendorid={{ item.vendorid }}">
      <van-card desc="{{ item.description[locale] }}" title="{{ item.displayName[locale] }}" thumb="{{ item.thumbnail }}" thumb-mode="aspectFill" custom-class="card {{ (systemInfo.safeAreaInset && vendors[tabItem].length - 1 == index) && 'card-inset' }}" title-class="card-title" desc-class="card-description" lazy-load>
        <view slot="tags">
          <van-tag color="#d1233e" custom-class="card-tag" wx:for="{{item.tag[locale]}}">{{item}}</van-tag>
        </view>
        <view slot="footer" class="card-footer fw d-flex-row align-items-center justify-content-between">
          <view class="d-flex-row align-items-center justify-content-center">
            <image src="/assets/icons/vendor-location.png" class="card-location-icon" />
            <label>{{ item.location }}</label>
          </view>
          <van-rate value="{{ item.rating }}" readonly="true" />
        </view>
      </van-card>
    </navigator>
  </van-tab>
</van-tabs>