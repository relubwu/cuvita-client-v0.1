.qrcode-container {
  position: relative;
  left: 0;
  top: 0;
  height: calc(70vw + 45px + 11pt);
  width: 70vw;
  background: white;
  border-radius: 5px;
  padding: 30px;
  padding-bottom: 0;
  transition: all 0.2s cubic-bezier(0.1, 0.7, 1.0, 0.1);
  -webkit-transition: all 0.2s cubic-bezier(0.1, 0.7, 1.0, 0.1);
}

.qrcode-canvas {
  width: 70vw;
  height: 70vw;
}

.qrcode-label {
  color: #b2b2b2;
  font-size: 11pt;
  padding: 15px 0;
  transition: opacity 0.5s ease;
  -webkit-transition: opacity 0.5s ease;
}