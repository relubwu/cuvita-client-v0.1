/**
 * z-index table
 * @-1 :: .banner
 * @-4 :: .banner-typo
 * @-5 :: .banner-image
 */

.banner {
  position: absolute;
  top: 0;
  height: 75vw;
  z-index: -1;
}

.banner-image {
  position: absolute;
  z-index: -5;
}

.banner-typo {
  position: absolute;
  z-index: -4;
  width: 60vw;
}

.body {
  position: absolute;
  top: 0;
  z-index: 0;
}

.body-inset {
  height: 75vw;
  margin-bottom: 28px;
}

.service {
  overflow: hidden;
  border-radius: 10px;
  box-shadow: 0 3px 15px #b2b2b2b2;
  -webkit-transform: perspective(1px) translateZ(0);
  transform: perspective(1px) translateZ(0);
  -webkit-transition-duration: 0.2s;
  transition-duration: 0.2s;
  -webkit-transition-property: all;
  transition-property: all;
}

.service-container {
  padding: 12px 15px;
}

.service-hover {
  -webkit-transform: scale(1.02);
  transform: scale(1.02);
}

.service-banner {
  height: 30vw;
  background-size: cover;
  transition: height 0.2s ease;
  -webkit-transition: height 0.2s ease;
  -webkit-backdrop-filter: blur(3px);
}

.service-banner-expand {
  height: 35vw;
}

.service-banner-label {
  color: white;
  font-size: 11pt;
  text-transform: uppercase;
}

.service-banner-title {
  color: white;
  font-size: 24pt;
  font-weight: bold;
  text-transform: uppercase;
}

.service-detail {
  background: white;
  height: 0;
  font-size: 11pt;
  padding-bottom: 0;
  transition: height 0.2s ease;
  -webkit-transition: height 0.2s ease;
}

.service-detail-expand {
  height: 50vw;
}

.service-detail-action {
  padding-bottom: 14px;
  font-weight: bold;
  text-transform: uppercase;
}