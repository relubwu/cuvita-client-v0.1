<view class="body container fw d-flex-row" style="padding-bottom: {{ systemInfo.safeAreaInset ? '34' : '0' }}px">
  <view wx:if="{{coupons.length == 0}}" class="fw d-flex-column nodata">
    {{ localepkg[locale].nodata }}
  </view>
  <navigator class="coupon-container {{ currentCoupon === item.id && 'coupon-container-expand' }} d-flex-column" wx:for="{{ coupons }}" wx:key="{{ item.id }}" bind:tap="tapFeedback" bind:longpress="showActionList" data-id="{{ item.id }}" data-vendorid="{{ item.vendorid }}" data-realm="{{ item.realm }}" hover-class="coupon-container-hover">
    <image src="{{ item.thumbnail }}" class="coupon-background-image fw fh" lazy-load mode="aspectFill"/>
    <view class="coupon-detail  {{ currentCoupon === item.id && 'coupon-detail-expand' }} fw container d-flex-column align-items-center">
      <label class="coupon-detail-title">{{ item.displayName[locale] }}</label>
      <label class="coupon-detail-description">{{ item.amount }}% Off Â· {{ localepkg[locale].due }}: {{ item.due }}</label>
      <image src="{{ context }}" class="coupon-detail-qrcode" mode="aspectFit" />
    </view>
  </navigator>
  <view wx:if="{{ coupons.length != 0 }}" class="description fw">{{ localepkg[locale].description }}</view>
</view>