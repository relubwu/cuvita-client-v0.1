<view class="form-header">
      <view class="form-title">{{ localepkg[locale].header }}</view>
      <view class="form-description">{{ localepkg[locale].description }}</view>
    </view>
<form bind:submit="onSubmit">
  <van-cell-group custom-class="form-group">
    <van-field name="cardno" type="number" required clearable label="{{ localepkg[locale].cardno }}" icon="question-o" placeholder="{{ localepkg[locale].cardnoplaceholder }}" bind:click-icon="explainCardNo" error-message="{{ errorMessage.cardno }}"/>
    <van-field name="name" type="text" label="{{ localepkg[locale].name }}" placeholder="{{ localepkg[locale].nameplaceholder }}" required border="{{ false }}" error-message="{{ errorMessage.name }}"/>
  </van-cell-group>
  <view class="button-wrapper">
    <button size="large" class="button" form-type="submit">{{localepkg[locale].button}}</button>
  </view>
</form>