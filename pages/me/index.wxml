<!-- USER_INFO -->
<view class="user container fw d-flex-row align-items-center" style="padding-top: {{ systemInfo.navigationBarHeight }}px;">
  <open-data class="user-avatar" type="userAvatarUrl" />
  <view class="user-info d-flex-column align-items-start justify-content-start">
    <open-data class="user-info-nickname" type="userNickName" />
    <open-data class="user-info-region" type="userCity" />
  </view>
</view>
<view class="body fw">
  <!-- BASE -->
  <label class="body-cell-group-title">{{ localepkg[locale].mine }}</label>
  <van-cell-group custom-class="body-cell-group">
    <van-cell title="{{ localepkg[locale].services }}" icon="bars" is-link />
    <van-cell title="{{ localepkg[locale].tickets }}" icon="label" is-link />
  </van-cell-group>
  <!-- SETTINGS -->
  <label class="body-cell-group-title">{{ localepkg[locale].settings }}</label>
  <van-collapse custom-class="body-cell-group" value="{{ activeSetting }}" bind:change="toggleSettings" accordion>
    <van-collapse-item title="{{ localepkg[locale].region }}" icon="location" name="region">
      <view class="fw d-flex-column align-items-center justify-content-center">
        <image class="implementing-icon" src="/assets/icons/implementing.png" />
        <label>功能调试中，敬请期待</label>
        <label>This feature is being implemented</label>
      </view>
    </van-collapse-item>
    <van-collapse-item title="{{ localepkg[locale].locale }}" icon="chat" name="locale" value="{{ localepkg[locale][locale] }}">
      <van-radio-group value="{{ locale }}">
        <van-cell-group border="{{ false }}">
          <van-cell title="简体中文" clickable data-locale="zh_CN" bind:click="setLocale">
            <van-radio name="zh_CN" checked-color="#d1233e" />
          </van-cell>
          <van-cell title="English" clickable data-locale="en_US" bind:click="setLocale" border="{{ false }}">
            <van-radio name="en_US" checked-color="#d1233e" />
          </van-cell>
        </van-cell-group>
      </van-radio-group>
    </van-collapse-item>
  </van-collapse>
  <label class="body-cell-group-title">{{ localepkg[locale].dev }}</label>
  <van-cell-group custom-class="body-cell-group">
    <van-cell title="{{ localepkg[locale].license }}" icon="info-o" is-link url="/pages/license/index" />
  </van-cell-group>
</view>
<!-- INSET -->
<view class="body-bottom-inset" style="padding-bottom: {{ systemInfo.safeAreaInset ? 'calc(4rem + 34px)' : '4rem' }};" />