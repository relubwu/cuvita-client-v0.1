/**
 * Globals
 */

page {
  background-color: #fafafa;
}

tab-bar {
  z-index: 100;
}

nav-bar {
  position: fixed;
  top: 0;
  z-index: 100;
}

/**
 * Tuples - Size
 */
.fw {
  width: 100%;
}

.fvw {
  width: 100vw;
}

.fh {
  height: 100%;
}

.fvh {
  height: 100vh;
}

/**
 * Tuples - Flex
 */

.d-flex-column {
  display: flex;
  flex-direction: column;
}

.d-flex-row {
  display: flex;
  flex-direction: row;
}

.justify-content-start {
  justify-content: flex-start;
}

.justify-content-end {
  justify-content: flex-end;
}

.justify-content-center {
  justify-content: center;
}

.justify-content-between {
  justify-content: space-between;
}

.justify-content-around {
  justify-content: space-around;
}

.justify-content-evenly {
  justify-content: space-evenly;
}

.align-items-start {
  align-items: start;
}

.align-items-end {
  align-items: end;
}

.align-items-center {
  align-items: center;
}

/**
 * Tuples - Spacing
 */

.container {
  box-sizing: border-box;
  padding: 7px 15px;
}

/** Colors **/
.bg-primary {
  background: #d1233e;
}

.bg-transparent {
  background: none;
}

.primary {
  color: #d1233e;
}

/** Fonts **/
.label-sm {
  font-size: 11pt;
  color: #b2b2b2;
}

/** Implementing Notice **/
.implementing-icon {
  width: 40px;
  height: 40px;
  padding: 7px 15px;
}

.implementing-label {
  color: #b2b2b2;
  font-size: 11pt;
}

/** Form **/
.form-header {
    padding: 30px 40px;
}

.form-footer{
    padding-bottom: 10px;
    text-align: center;
}

.form-title {
    text-align: left;
    font-size: 20px;
    font-weight: 400;
}

.form-description {
    margin-top: 5px;
    color: #b2b2b2;
    text-align: left;
    font-size: 11pt;
}

.form-group {
  padding: 7px 0;
}

.form-button-wrapper {
  box-sizing: border-box;
  padding: 42px 30px;
}

.form-button {
  background-color: #d1233e !important;
  color: white !important;
  overflow: hidden !important;
  border-radius: 5px !important;
  text-transform: capitalize;
}

.form-steps-wrapper {
  box-sizing: border-box;
  padding: 40px;
}

.form-cell-group-title {
  font-size: 11pt;
  color: #b2b2b2;
  padding: 0 15px;
  margin: 7px 0;
}